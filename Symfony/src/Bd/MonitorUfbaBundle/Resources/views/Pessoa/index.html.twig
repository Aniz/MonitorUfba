{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pessoa list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cpf</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Rg</th>
                <th>Orgaoemissor</th>
                <th>Endereco</th>
                <th>Telefone</th>
                <th>Tipo</th>
                <th>Matricula</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pessoa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cpf }}</td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.senha }}</td>
                <td>{{ entity.rg }}</td>
                <td>{{ entity.orgaoEmissor }}</td>
                <td>{{ entity.endereco }}</td>
                <td>{{ entity.telefone }}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.matricula }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pessoa_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pessoa_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pessoa_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
